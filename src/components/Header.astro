<style>
  .tenor-gif-embed {
    max-width: 150px; /* Decreased from 200px to 150px */
    width: 100%; /* Ensures the GIF takes full width of its container */
    border-radius: 8px; /* Slightly decreased from 10px to 8px */
    overflow: hidden;
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1); /* Slightly reduced shadow */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .tenor-gif-embed:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 7px rgba(0, 0, 0, 0.15); /* Slightly reduced shadow on hover */
  }

  /* Adjust header layout for the smaller GIF */
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 12px 0; /* Slightly reduced padding */
  }

  .fi {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .emoji-text {
    margin-top: 10px;
    font-size: 2em; /* Increased from 1.3em to 2em */
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .emoji-text:hover {
    transform: scale(1.1); /* Added a slight scale effect on hover */
  }
</style>

<script is:inline>
  // Load Tenor embed script
  (function() {
    var script = document.createElement('script');
    script.type = 'text/javascript';
    script.async = true;
    script.src = 'https://tenor.com/embed.js';
    document.body.appendChild(script);
  })();
</script>
